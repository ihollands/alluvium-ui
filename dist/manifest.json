{
  "manifest_version": 3,
  "name": "Alluvium",
  "version": "0.1",
  "description": "Spaced repetition for reading and learning",
  "background": {
    "service_worker": "./background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs"],
  "author": "Ian Hollands",
  "short_name": "Alluvium",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Alluvium",
    "default_icon": {
      "16": "/images/react-logo-192.png",
      "32": "/images/react-logo-192.png",
      "48": "/images/react-logo-192.png",
      "128": "/images/react-logo-192.png"
    }
  },
  "icons": {
    "16": "/images/react-logo-192.png",
    "32": "/images/react-logo-192.png",
    "48": "/images/react-logo-192.png",
    "128": "/images/react-logo-192.png"
  }
}
